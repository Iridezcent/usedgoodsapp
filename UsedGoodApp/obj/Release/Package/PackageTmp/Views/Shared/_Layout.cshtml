<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/datatables.min.css" />
    <title>@ViewBag.Title – UsedGoods</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light mr-auto">
        <a class="navbar-brand" href="#">UsedGoods</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav mr-auto">
                <a class="nav-item nav-link" href="/Product/Index">Товары</a>
                @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                {
                    @Html.ActionLink("Склады", "Index", "Warehouse", null, htmlAttributes: new { @class = "nav-item nav-link" })
                    @Html.ActionLink("Категории", "Index","Category", null, htmlAttributes: new { @class = "nav-item nav-link" })
                    @Html.ActionLink("Админ панель", "Index", "Admin", null, htmlAttributes: new { @class = "nav-item nav-link" })
                    @*<a class="nav-item nav-link" href="/Warehouse/Index">Склады</a>
                    <a class="nav-item nav-link" href="/Category/Index">Категории</a>
                    <a class="nav-item nav-link" href="/Admin/Index">Админ панель</a>*@
                }
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <footer>
            @*<p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/Scripts/scripts.js")*@
    @RenderSection("scripts", required: false)
</body>
</html>
