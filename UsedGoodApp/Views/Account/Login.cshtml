@model UsedGoodApp.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { @class = "justify-content-center pl-3" }))
{
    @Html.AntiForgeryToken()

    <h1 class="form-group display-3">Вход</h1>

    <div class="form-group row">
        <div class="col-sm-1">
            @Html.DisplayNameFor(l => l.Email)
        </div>
        <div class="col-sm-10">
            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = $"form-control", @placeholder = "Введите Email" } })
        </div>          
    </div>
    <div class="form-group row">
        <div class="col-sm-1">
            @Html.DisplayNameFor(x => x.Password)
        </div>
        <div class="col-sm-10">
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = $"form-control" , @placeholder = "Введите пароль"} })
        </div>     
    </div>
    <div class="form-group row">
        <div class="col-sm-1">
            <label class="form-check-inline">
                @Html.DisplayNameFor(x => x.IsPersistent)
            </label>
        </div>
        <div class="col-sm-10">
            <div class="form-check">
                @Html.EditorFor(x => x.IsPersistent, new { htmlAttributes = new { @class = $"form-check-input" } })
            </div>
        </div>      
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Войти</button>
        </div>
    </div>
    @Html.ValidationSummary( String.Empty, htmlAttributes: new { @class="text-danger"})
}